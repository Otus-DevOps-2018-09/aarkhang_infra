{
    "variables": {
        "project_id": null,
        "zone": "europe-west1-b",
        "machine_type": "f1-micro",
        "image_family": "reddit-db-base",
		"source_image_family": "ubuntu-1604-lts",
        "disk_size": "10",
        "disk_type": "pd-standard",
        "network": "default",
		"ssh_username": "appuser",
        "image_description": "image prebaked for reddit-app with MongoDB",
        "mongo_ver": "3.4"
    },
	"builders": [
		{
		"type": "googlecompute",
		"project_id": "{{user `project_id`}}",
        "machine_type": "{{user `machine_type`}}",
		"zone": "{{user `zone`}}",
        "image_family": "{{user `image_family`}}",
		"image_name": "{{user `image_family`}}-{{timestamp}}",
        "image_description" : "{{user `source_image_family`}} {{user `image_description`}} {{user `mongo_ver`}}",
        "source_image_family": "{{user `source_image_family`}}",
        "disk_size": "{{user `disk_size`}}",
        "disk_type": "{{user `disk_type`}}",
        "network": "{{user `network`}}",
		"ssh_username": "{{user `ssh_username`}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "{{template_dir}}/scripts/install_mongodb.sh",
            "execute_command": "sudo {{.Path}} {{user `mongo_ver`}}"
        }
    ]
}
